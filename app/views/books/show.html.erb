<%= flash[:notice] %>
<div>
  <h2>Book detail</h2>
  <table class="table table-striped">
   <tr><%= link_to user_path(@book.user) do %>
       <%= image_tag @book.user.get_profile_image(100,100) %>
       <% end %>
   </tr>
   <tr>Title：<%= link_to @book.title,book_path(@book.id) %></tr>
   <tr>Opinion：<%= @book.body %>
       <%= @book.user.name%>
   </tr>
   <tr><% if @book.user_id == current_user.id %>
       <%= link_to "Edit", edit_book_path(@book.id) %>
       <%= link_to "Destroy", book_path(@book.id), method: :delete %>
       <% end %>
   </tr>
 </table>
</div>


