<div class="container px-5 px-sm-0">

  <div class="row">
   <div class="col-md-3">
    <%= render 'books/list', books: @books %>

    <h3>New book</h3>
      <% if Book.new.errors.any? %>
      <%= Book.new.errors.count %>errors prohibited this obj from being saved:
      <ul>
       <% Book.new.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
      <% end %>

      <%= form_with model: Book.new do |f| %>
      <div class="form-group">
       <label>Title</label><br>
       <input class="form-control book-title" type="text" name="book[title]" id="book_title">
      </div>
      <div class="form-group">
       <label>Opinion</label><br>
      <%= f.text_area :body %><br>
      </div>
      <div class="form-group">
       <input class= "btn btn-success" type="submit" value="Create Book">
      <% end %>
      </div>
   </div>

   <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
    <table class="table table-striped">
     <thead>
      <tr class="border-top border-bottom">
       <th>image</th>
       <th>name</th>
      </tr>
     </thead>
     <tbody>
      <% @users.each do |user| %>
      <tr class="border-top border-bottom">
       <td><%= image_tag user.get_profile_image(100,100) %></td>
       <td><%= user.name %></td>
       <th><%= link_to"Show", user_path(user.id)%></th>
      </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
</div>
 <div class="container">
  <div class="row">
   <div class="mx-auto">
   <footer>CopyRight Infratop.inc</footer>
   </div>
  </div>
 </div>


